<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:layout_margin="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/textViewNameEndroit"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimaryDark"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:text="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Description"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"  />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/textViewDescriptionEndroit"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:background="@color/colorPrimaryDark"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:text="Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDetailPlace"
            android:layout_weight="1" />

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone" />

    <TextView
        android:text="Pas de photos pour cette place"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/textViewListPhotoEmpty"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-medium" />

    <Button
        android:text="Mettre Ã  jour la place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonUploadPlace"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-medium"
        android:background="@color/colorPrimaryDark"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycler_view_list_photo_endroit"
        android:layout_margin="10dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Supprimer la place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDeletePlace"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-medium"
        android:background="@color/colorPrimaryDark"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:padding="15dp"
    android:weightSum="100">

    <TableRow>

        <CheckBox
            android:id="@+id/amusement_park"
            android:layout_weight="5"
            android:text="Parc d'attractions"/>

        <CheckBox
            android:id="@+id/aquarium"
            android:layout_weight="20"/>
    </TableRow>

    <TableRow>

        <CheckBox
            android:id="@+id/art_gallery"
            android:layout_weight="5"
            android:text="Galerie d'art"/>

        <CheckBox
            android:id="@+id/campground"
            android:layout_weight="20"
            android:text="Camping"/>
    </TableRow>

    <TableRow>

        <CheckBox
            android:id="@+id/hindu_temple"
            android:layout_weight="5"
            android:text="Temple Hindu"/>

        <CheckBox
            android:id="@+id/mosque"
            android:layout_weight="20"
            android:text="Mosquée"/>
    </TableRow>

    <TableRow>

        <CheckBox
            android:id="@+id/museum"
            android:layout_weight="5"
            android:text="Musée"/>

        <CheckBox
            android:id="@+id/park"
            android:layout_weight="20"
            android:text="Parc"/>
    </TableRow>

    <TableRow>

        <CheckBox
            android:id="@+id/stadium"
            android:layout_weight="5"
            android:text="Stade"/>

        <CheckBox
            android:id="@+id/synagogue"
            android:layout_weight="20"
            android:text="Synagogue"/>
    </TableRow>

    <TableRow>

        <CheckBox
            android:id="@+id/zoo"
            android:layout_weight="5"
            android:text="Zoo"/>

    </TableRow>
</TableLayout>